{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": [
        "./src/**/*.ts"
    ]
}